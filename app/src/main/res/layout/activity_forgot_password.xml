<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".auth.ForgotPassword"
    android:background="#01579b"
    android:orientation="vertical"
    >

    <ImageButton
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:background="#01579b"
        android:src="@drawable/ic_sharp_arrow_back_ios_24"
        app:tint="@color/white"
        android:id="@+id/backToLogin"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_centerVertical="false"
        android:layout_marginTop="70sp"
        android:fontFamily="sans-serif-condensed-medium"
        android:textColor="@color/white"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please enter your email address and a password reset code will be sent to your email"
        android:layout_marginTop="50sp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginLeft="10sp"
        android:textAlignment="center"
        android:layout_marginRight="10sp"
        />


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="60sp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:clipToOutline="true"
        android:layout_marginTop="50sp"
        android:id="@+id/emailLayout"
        app:startIconDrawable="@drawable/ic_sharp_email_24"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:background="@color/white"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/SendToEmail"
            android:hint="Enter Email"
            android:inputType="textEmailAddress"

            />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/loginBtn"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_below="@id/passwordLayout"
        android:layout_marginTop="20sp"
        android:background="#2962ff"
        android:text="Submit"
        app:backgroundTint="#2962ff"
        android:layout_marginRight="10sp"
        android:layout_marginLeft="10sp"
        />

</LinearLayout>